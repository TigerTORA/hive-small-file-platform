# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
RELOAD=false

# Database (生产环境建议使用 PostgreSQL 或 MySQL)
# 示例（PostgreSQL）：
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/hive_small_file_db
# 示例（MySQL）：
# DATABASE_URL=mysql+pymysql://user:pass@mysql:3306/hive_small_file_db

# Redis / Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Security
SECRET_KEY=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Defaults for Hive/HDFS
DEFAULT_HIVE_HOST=localhost
DEFAULT_HIVE_PORT=10000
# 推荐在集群中使用 HttpFS 或 WebHDFS 的 HTTP 地址
DEFAULT_HDFS_URL=http://namenode:9870/webhdfs/v1

# Threshold
SMALL_FILE_THRESHOLD=134217728

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Schema management (生产务必关闭自动建表，使用 Alembic 迁移)
AUTO_CREATE_SCHEMA=false

# Demo mode
DEMO_MODE=false

