# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8000
RELOAD=true

# Database
DATABASE_URL=sqlite:///./hive_small_file_db.db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Default Hive/HDFS settings
DEFAULT_HIVE_HOST=localhost
DEFAULT_HIVE_PORT=10000
DEFAULT_HDFS_URL=hdfs://localhost:9000

# Small file threshold (in bytes)
SMALL_FILE_THRESHOLD=134217728

# Sentry
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# CORS
# Comma-separated list of allowed origins for cross-site requests
# Example: http://localhost:3000,https://admin.example.com
ALLOWED_ORIGINS=http://localhost:3000
